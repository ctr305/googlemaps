@model UbicacionViewModel
@{
    ViewData["Title"] = "Seleccionar Ubicación";
}
<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-sm-6">
        <form>
            <div class="card mt-3">
                <div class="card-header">
                    Datos de localización
                </div>
                <div class="card-body contenedor-mapa">
                    <div class="mb-3">
                        <label asp-for="Localizador" class="form-label"></label>
                        <input asp-for="Localizador" class="form-control" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Latitud" class="form-label"></label>
                        <input asp-for="Latitud" class="form-control" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Longitud" class="form-label"></label>
                        <input asp-for="Longitud" class="form-control" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Distancia" class="form-label"></label>
                        <input asp-for="Distancia" class="form-control-plaintext fw-bold" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Tiempo" class="form-label"></label>
                        <input asp-for="Tiempo" class="form-control-plaintext fw-bold" >
                    </div>
                    <div class="mb-3">
                        <label asp-for="Transporte" class="form-label"></label>
                        <select asp-for="Transporte" asp-items="Model.Transportes" class="form-select">
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <label asp-for="MostrarRuta" class="form-label"></label>
                            <input asp-for="MostrarRuta" class="form-check-input" >
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    Ingrese el nombre de la ubicacion o las coordenadas para verlo en el mapa.
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-6">
        <div class="card mt-3">
            <div class="card-header">
                Mapa
            </div>
            <div class="card-body contenedor-mapa">
                <div id="mapa" class="h-100"></div>
            </div>
            <div class="card-footer text-center">
                Selecciona un lugar moviendo el marcador rojo a una ubicación.
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/ubicacion.css" asp-append-version="true" />
}

@section Scripts {
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDN3vjtO_5CHpPTAIVpygowsC4sjptPESE&allback=&callback=console.debug"></script>
    <script src="~/js/locationpicker.js" asp-append-version="true"></script>
    <script src="~/js/ubicacion.js" asp-append-version="true"></script>
}
